{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
  },
  "include": ["lib/**/*", "tests/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "./node_modules/**/*"
  ],
}